<h1>Contas A Pagars</h1>

<table>
  <thead>
    <tr>
      <th>Data lancamento</th>
      <th>Descricao</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contas_a_pagars.each do |contas_a_pagar| %>
      <tr>
        <td><%= contas_a_pagar.data_lancamento %></td>
        <td><%= contas_a_pagar.descricao %></td>
        <td><%= contas_a_pagar.valor %></td>
        <td><%= link_to 'Show', contas_a_pagar %></td>
        <td><%= link_to 'Edit', edit_contas_a_pagar_path(contas_a_pagar) %></td>
        <td><%= link_to 'Destroy', contas_a_pagar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

